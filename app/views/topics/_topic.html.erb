<% @topic.each do |t| %>
<div class="topic">
	<div class="title"><h2><%= t.title %></h2></div>
	<div class="">
		<%= link_to topic_path(t) do%>
			<%= image_tag t.image.url(:full),:class => "image" %> 
		<% end %>
	</div>
	<ul class="infoTopic">
		<li><a href="">View <span class="badge"><%= t.view %></span></a></li>	
		<li><a href="">Like <span class="badge"><%= t.like %></span></a></li>
		<li><a href="">Comment <span class="badge"><%= t.comment %></span></a></li>
	</ul>
</div>
<hr>
<% end %>