<div class="panel panel-default" id="panel-topic"> 
  <div class="panel-heading">
      <h1>New Topic</h1>
  </div>
  <div class="panel-body">
  <%= form_for @newTopic ,html: { multipart: true ,class: "nifty_form"} do |f| %>
  <% if @newTopic.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@newTopic.errors.count, "error") %> prohibited
        this topic from being saved:
      </h2>
      <ul>
        <% @newTopic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <div class="form-group">
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :image, 'Image' %>
  <%= f.file_field :image %>
  </div>
  
  <%= f.submit'Post',:class => "btn btn-primary" %>
  </div>
</div>
<% end %>